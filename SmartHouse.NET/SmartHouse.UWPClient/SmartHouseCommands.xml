<?xml version="1.0" encoding="utf-8" ?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="SmartHouseCommandSet_en-us">
    <AppName> Smart House </AppName>
    <Example> play current song </Example>

    <Command Name="pandoraCommands">
      <Example> Smart House play current song </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">{command} [current][this] song</ListenFor>
      <Feedback> Starting to {command} song</Feedback>
      <VoiceCommandService Target="SmartHouseVoiceCommandService"/>
    </Command>
    
    <Command Name="smartHouseCommands">
      <Example> Smart House Turn On </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase">{command}</ListenFor>
      <Feedback> Please wait </Feedback>
      <VoiceCommandService Target="SmartHouseVoiceCommandService"/>
    </Command>
    
    <PhraseList Label="command">
      <Item>Play</Item>
      <Item>Stop</Item>
      <Item>Next</Item>
      <Item>Volume up</Item>
      <Item>Volume down</Item>
      <Item>Display</Item>
      <Item>Thumb up</Item>
      <Item>Tired of</Item>            
      <Item>Turn on</Item>
      <Item>Turn off</Item>
    </PhraseList>
  
  </CommandSet>

</VoiceCommands>
