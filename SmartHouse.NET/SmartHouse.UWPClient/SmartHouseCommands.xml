<?xml version="1.0" encoding="utf-8" ?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="SmartHouseCommandSet_en-us">
    <AppName> Smart House </AppName>
    <Example> play current song </Example>

    <Command Name="pandoraCommands">
      <Example> Play current song </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> {command} [current] [this] song</ListenFor>
      <Feedback> Starting to {command} song</Feedback>
      <VoiceCommandService Target="SmartHouseVoiceCommandService"/>
    </Command>
    
    <Command Name="smartHouseTurnOnCommand">
      <Example> Turn on </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> turn on</ListenFor>
      <Feedback> Please wait </Feedback>
      <VoiceCommandService Target="SmartHouseVoiceCommandService"/>
    </Command>

    <Command Name="smartHousePlayBitch">
      <Example> Bitch play my shit </Example>
      <ListenFor> you bitch, play my shit </ListenFor>
      <Feedback> Yes master, ready to work </Feedback>
      <VoiceCommandService Target="SmartHouseVoiceCommandService"/>
    </Command>
    
    <Command Name="smartHouseTurnOffCommand">
      <Example> Turn off </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> turn off</ListenFor>
      <Feedback> Please wait </Feedback>
      <VoiceCommandService Target="SmartHouseVoiceCommandService"/>
    </Command>

    <Command Name="smartHouseVolumeUp">
      <Example> Volume up </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> volume up</ListenFor>
      <Feedback> Please wait </Feedback>
      <VoiceCommandService Target="SmartHouseVoiceCommandService"/>
    </Command>

    <Command Name="smartHouseVolumeDown">
      <Example> Volume Down </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> volume down</ListenFor>
      <Feedback> Please wait </Feedback>
      <VoiceCommandService Target="SmartHouseVoiceCommandService"/>
    </Command>
    
    <Command Name="smartHouseMode">
      <Example> Set Normal mode </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> set {mode} mode</ListenFor>
      <Feedback> Setting normal mode </Feedback>
      <VoiceCommandService Target="SmartHouseVoiceCommandService"/>
    </Command>
    
    <Command Name="smartHouseInput">
      <Example> TV input </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> {input} input</ListenFor>
      <Feedback> Setting TV input </Feedback>
      <VoiceCommandService Target="SmartHouseVoiceCommandService"/>
    </Command>
    
    <Command Name="smartHouseCurrentInput">
      <Example> Get Current input </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> Get Current input </ListenFor>
      <Feedback> Please wait </Feedback>
      <VoiceCommandService Target="SmartHouseVoiceCommandService"/>
    </Command>
    
    <Command Name="smartHouseRestartVPN">
      <Example> Restart Open VPN </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> Restart Open VPN </ListenFor>
      <Feedback> Please wait </Feedback>
      <VoiceCommandService Target="SmartHouseVoiceCommandService"/>
    </Command>
    
    <PhraseList Label="command">
      <Item>Play</Item>      
      <Item>Stop</Item>
      <Item>Next</Item>
      <Item>Show</Item>
      <Item>Love</Item>
      <Item>Hate</Item>
      <Item>Boring</Item>      
    </PhraseList>
  
    <PhraseList Label="mode">
        <Item>Quite</Item>
        <Item>Normal</Item>
        <Item>Loud</Item>        
    </PhraseList>
  
    <PhraseList Label="input">
        <Item>Pandora</Item>
        <Item>XBox</Item>
        <Item>TV</Item>        
    </PhraseList>
  
  </CommandSet>

</VoiceCommands>
